---
import "../styles/global.css";
import "./Layout.css";

import BaseHead from "../components/BaseHead/BaseHead.astro";
import Footer from "../components/Footer/Footer.astro";
import Header from "../components/Header/Header.astro";

const title = Astro.props.title || "Trendy AI";
const description =
	Astro.props.description ||
	"Create trendy AI videos effortlessly with Trendy AI";
const imageUrl = "../assets/logo.png";
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} image={imageUrl} />
	</head>
<body>
<div class="container">
	<Header/>
	<main class="main-content">
		<slot />
	</main>
	<Footer/>
</div>
</body>
</html>
